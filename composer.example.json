{
	"name": "cuweb/config-composer",
	"description": "Composer setup for a WordPress Multi Tenant environment",
	"minimum-stability": "dev",
	"prefer-stable": true,
	"require": {
		"php": "^7.0",
		"composer/installers": "1.*",
		"johnpbloch/wordpress": "5.2.2",
		"vlucas/phpdotenv": "3.4.0",
		"wpackagist-theme/twentynineteen": "@stable",
		"wpackagist-plugin/debug-bar": "*",
		"wpackagist-plugin/redis-cache": "*",
		"wpackagist-plugin/pj-page-cache-red": "*",
		"troychaplin79/wp-homepage": "dev-master",
		"troychaplin79/wp-starter": "dev-master"
	},
	"repositories": [
		{
			"type": "composer",
			"url": "https://wpackagist.org"
		},
		{
			"type": "vcs",
			"url": "https://github.com/troychaplin79/wp-homepage"
		},
		{
			"type": "vcs",
			"url": "https://github.com/troychaplin79/wp-starter"
		}
	],
	"extra": {
		"wordpress-install-dir": "app/stable",
		"installer-paths": {
			"assets/mu-plugins/{$name}/": [
				"type:wordpress-muplugin",
				"wpackagist-plugin/redis-cache",
				"wpackagist-plugin/pj-page-cache-red"
			],
			"assets/plugins/{$name}/": ["type:wordpress-plugin"],
			"assets/themes/{$name}/": ["type:wordpress-theme"]
		}
	},
	"scripts": {
		"post-install-cmd": "bash config/config.sh",
		"post-update-cmd": "bash config/config.sh"
	}
}
